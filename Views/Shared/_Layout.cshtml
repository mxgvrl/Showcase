<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link href="~/css/main.css" rel="stylesheet" type="text/css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css"/>
    <link rel="stylesheet" href="~/js/bootstrap.bundle.min.js"/>
</head>
<body>

<nav class="navbar navbar-expand-md sticky-top py-2">
    <a class="navbar-brand" href='@Url.Action("Home", "Home")'>Apple <i class="fa fa-store-alt"></i> Showcase</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Mac
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href='@Url.Action("Mac", "ProductsList")'>iMac</a>
                    <a class="dropdown-item">Mac</a>
                    <a class="dropdown-item" href="#">MacBook</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">Accessories</a>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" href='@Url.Action("IPad", "ProductsList")'>iPad</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href='@Url.Action("IPhone", "ProductsList")'>iPhone</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href='@Url.Action("Watch", "ProductsList")'>Watch</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href='@Url.Action("Pods", "ProductsList")'>Music</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">TV</a>
            </li>
        </ul>
        <form class="form-inline">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle fa fa-user" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            <a class="dropdown-item-text">@User.FindFirst(x => x.Type == "name").Value</a>
                            <div class="dropdown-divider"></div>
                            if (User.FindFirst(x => x.Type == "name").Value == "Admin")
                            {
                                <a class="dropdown-item" href='@Url.Action("Index", "AdminPage")'>Manage</a> 
                            }
                            <a class="dropdown-item" href='@Url.Action("Logout", "Account")'>Log out</a>
                        }
                        else
                        {
                            <a class="dropdown-item" href='@Url.Action("Login", "Account")'>Log in</a>
                        }
                    }
                </div>     
                <li class="nav-item">
                    <a class="nav-link fa fa-search mr-4" href="#"></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fa fa-bookmark mr-2" href="#"></a>
                </li>
            </ul>
        </form>
    </div>
</nav>

<div>
    @RenderBody()
</div>

<footer class="page-footer font-small pt-4">
    <div class="container-fluid text-center text-md-left">
        <div class="row">
            <div class="col-md-6 mt-md-0 mt-5">
                <h5 class="text-uppercase">Contact us</h5>
                <p>You can contact us using social networks</p>
            </div>
            <hr class="clearfix w-100 d-md-none pb-3">
            <div class="col-md-3 mb-md-0 mb-3">
                <h5 class="text-uppercase">Developer</h5>
                <ul class="list-unstyled">
                    <li>Maxim Gavrilovich</li>
                    <li>Belarus, Minsk City, MCB</li>
                </ul>
            </div>

            <div class="col-md-3 mb-md-0 mb-3">
                <h5 class="text-uppercase">Links</h5>
                <ul class="list-unstyled">
                    <li>
                        <a href="https://vk.com/mxgvrl">VK</a>
                    </li>
                    <li>
                        <a href="https://www.instagram.com/mxgvrlvch/?hl=ru">Instagram</a>
                    </li>
                    <li>
                        <a href="maximgavrilovich@icloud.com">Email</a>
                    </li>
                </ul>

            </div>
        </div>
    </div>
    <div class="footer-copyright text-center py-3">Â© 2020 Copyright:
        <a href="#"> Maxim Gavrilovich</a>
    </div>
</footer>
<script src="~/js/auth.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>